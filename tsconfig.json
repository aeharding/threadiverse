{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "composite": true,
    "allowImportingTsExtensions": true,
    "isolatedDeclarations": false
  },
  "include": ["src"]
}
